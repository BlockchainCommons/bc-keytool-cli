# Package-specific substitution variables
package = @PACKAGE_NAME@
version = @PACKAGE_VERSION@
tarname = @PACKAGE_TARNAME@

# Prefix-specific substitution variables
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@

# VPATH-specific substitution variables
srcdir = @srcdir@
VPATH = @srcdir@

# Terminal colors
RED=`tput setaf 1`
GREEN=`tput setaf 2`
RESET=`tput sgr0`

COMPILER = g++
CFLAGS += --debug -O0
CXXFLAGS += -std=c++17 -stdlib=libc++ --debug -O0

toolname = keytool

.PHONY: all
all: $(toolname)

OBJS = \
	asset.o \
	chain-type.o \
	derivation-path.o \
	ec-key.o \
	hd-key.o \
	index-bound.o \
	keytool.o \
	model.o \
	model-eckey.o \
	model-hdkey.o \
	model-psbt.o \
	model-seed.o \
	network.o \
	output-descriptor.o \
	output-type.o \
	params.o \
	psbt.o \
	randombytes.o \
	request.o \
	response.o \
	seed.o \
	timestamp.o \
	transaction.o \
	utils.o \
	uuid.o \
	wally-utils.o

LDLIBS += -lwallycore -lsecp256k1 -largp -lbc-ur

UNAME := $(shell uname)
ifeq ($(UNAME), Linux)
    LDLIBS += -lm -lc++ -lc++abi -lgcc_s -lgcc
else ifeq ($(findstring MINGW64, $(UNAME)), MINGW64)
    # on windows building with msys2/mingw64
    LDLIBS += -lm -lc++ -lws2_32 -lssp
else
    LDLIBS += -lstdc++
endif

$(toolname): $(OBJS)

asset.o: asset.hpp network.hpp
chain-type.o: chain-type.hpp
derivation-path.o: derivation-path.hpp utils.hpp index-bound.hpp
ec-key.o: ec-key.hpp utils.hpp wally-utils.hpp
hd-key.o: hd-key.hpp utils.hpp network.hpp wally-utils.hpp derivation-path.hpp seed.hpp
index-bound.o: index-bound.hpp
keytool.o: params.hpp
model.o: model.hpp data-node.hpp asset.hpp hd-key.hpp ec-key.hpp utils.hpp wally-utils.hpp derivation-path.hpp chain-type.hpp output-type.hpp index-bound.hpp output-descriptor.hpp psbt.hpp transaction.hpp seed.hpp model-eckey.hpp model-hdkey.hpp model-psbt.hpp model-seed.hpp
model-eckey.o: model-eckey.hpp data-node.hpp utils.hpp model.hpp asset.hpp network.hpp ec-key.hpp
model-hdkey.o: model-hdkey.hpp data-node.hpp utils.hpp model.hpp hd-key.hpp output-type.hpp derivation-path.hpp chain-type.hpp index-bound.hpp output-descriptor.hpp
model-psbt.o: model-psbt.hpp data-node.hpp utils.hpp model.hpp psbt.hpp transaction.hpp
model-seed.o: model-seed.hpp data-node.hpp utils.hpp model.hpp seed.hpp
network.o: network.hpp
output-descriptor.o: output-descriptor.hpp output-type.hpp derivation-path.hpp hd-key.hpp
output-type.o: output-type.hpp
params.o: params.hpp utils.hpp config.h model.hpp
psbt.o: psbt.hpp utils.hpp wally-utils.hpp ec-key.hpp
randombytes.o: randombytes.h
request.o: request.hpp uuid.hpp utils.hpp
response.o: response.hpp
seed.o: seed.hpp
timestamp.o: timestamp.hpp date.h
transaction.o: transaction.hpp utils.hpp wally-utils.hpp psbt.hpp
utils.o: utils.hpp randombytes.h
uuid.o: uuid.hpp
wally-utils.o: wally-utils.hpp utils.hpp asset.hpp model.hpp hd-key.hpp derivation-path.hpp ec-key.hpp

bindir = $(DESTDIR)$(prefix)/bin

.PHONY: install
install: $(toolname)
	install -d $(bindir)
	install $(toolname) $(bindir)

.PHONY: uninstall
uninstall:
	rm -f $(bindir)/$(toolname)
	-rmdir $(bindir) >/dev/null 2>&1

.PHONY: check
check: $(toolname)
	./test.sh ./$(toolname)

.PHONY: clean
clean:
	rm -f $(toolname) *.o
	rm -rf *.dSYM

.PHONY: distclean
distclean: clean
	rm -f Makefile
	rm -f config.h

.PHONY: lint
lint:
	cppcheck --enable=all --error-exitcode=1 --inline-suppr --suppress=missingInclude --suppress=ConfigurationNotChecked .
