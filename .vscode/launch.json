{
    "version": "0.2.0",
    "configurations": [
        {
            // You may need to install the extension "CodeLLDB" for debugging to work on Macs with Catalina.
            "name": "Build and Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/src/keytool",
            "args": [ "--address-derivation-path", "m/44h/0h/0h/0/0", "address-derivation-path" ],
            "cwd": "${workspaceFolder}/src",
            "preLaunchTask": "Build"
        }
    ]
}
